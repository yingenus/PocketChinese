<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/visibility_check_box"

        tools:text="TextTest"
        />

    <TextView
        android:id="@+id/second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@id/visibility_check_box"
        app:layout_constraintTop_toBottomOf="@id/main_text"

        tools:text="TextTest"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/visibility_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:button="@drawable/visibility_state"

        android:layout_marginStart="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_text"
        app:layout_constraintBottom_toBottomOf="@id/main_text"
        />

    <FrameLayout
        android:id="@+id/pin_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/second_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

    />

    <Button
        style="@style/Style.PocketChinese.Button.TextButton"

        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:icon="@drawable/ic_next_2"
        app:iconGravity="textEnd"

        app:layout_constraintTop_toTopOf="@id/main_text"
        app:layout_constraintBottom_toBottomOf="@id/main_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        style="@style/Style.PocketChinese.Button.TextButton"

        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintTop_toBottomOf="@id/pin_text_view"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        style="@style/Style.PocketChinese.Button.TextButton"

        android:id="@+id/give_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/give_up"
        app:layout_constraintTop_toBottomOf="@id/pin_text_view"
        app:layout_constraintEnd_toStartOf="@id/next_button"/>

    <TextView
        android:id="@+id/visible_testing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/skip_button"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>