<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:background="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/suggest_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="TextTest"
        />

    <TextView
        android:id="@+id/suggest_list_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/suggest_list_name"
        app:layout_constraintStart_toStartOf="@id/suggest_list_name"
        android:textColor="?android:textColorSecondary"
        android:layout_marginTop="5dp"

        tools:text="TextTest"/>

    <TextView
        android:id="@+id/suggest_list_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/suggest_list_words"
        app:layout_constraintEnd_toEndOf="@id/suggest_list_line_view"
        android:layout_marginEnd="5dp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginTop="5dp"

        tools:text="TextTest"/>

    <View
        android:id="@+id/suggest_list_new"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:background="@drawable/new_box"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/suggest_list_name"
        app:layout_constraintTop_toTopOf="@id/suggest_list_name"
        app:layout_constraintBottom_toBottomOf="@id/suggest_list_name"
        />

    <View
        android:id="@+id/suggest_list_line_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.25"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/suggest_list_words"
        app:layout_constraintStart_toStartOf="@id/suggest_list_words"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>