<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:background="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/holder_word_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:maxLength="20"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/holder_word_success_value"

        tools:text="TextTest"
        />

    <TextView
        android:id="@+id/holder_word_success_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/holder_word_name"
        app:layout_constraintEnd_toEndOf="@id/suggest_list_line_view"
        app:layout_constraintTop_toTopOf="@+id/holder_word_name"

        tools:text="TextTest"
        />


    <View
        android:id="@+id/suggest_list_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.25"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/holder_word_name"
        app:layout_constraintStart_toStartOf="@id/holder_word_name"
        android:layout_marginTop="4dp"/>

    <CheckBox
        android:id="@+id/selected_box"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:visibility="gone"
        android:checked="false"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:visibility="visible"
        tools:checked="true"
        />


</androidx.constraintlayout.widget.ConstraintLayout>