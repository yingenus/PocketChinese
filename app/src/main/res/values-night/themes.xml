<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketChinese" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/dark_red_shaded</item>
        <item name="colorPrimaryDark">@color/dark_red_dark</item>
        <item name="colorOnPrimary">@color/gray_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_red_shaded</item>
        <item name="colorSecondaryVariant">@color/app_red_dark</item>
        <item name="colorOnSecondary">@color/gray_light</item>
        <!-- <item name="android:homeAsUpIndicator">@color/backgroundColor</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="colorSurface">@color/black_light_plus</item>
        <item name="colorOnBackground">@color/black_light</item>
        <item name="colorOnSurface">@color/gray_light</item>

        <item name="android:textColorPrimary">@color/gray_light</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <item name="actionModeCloseDrawable">@drawable/ic_back</item>

        <item name="alertDialogTheme">@style/Theme.PocketChinese.AlertDialog.Night</item>
        <item name="actionModeStyle">@style/Style.PocketChinese.ActionMode</item>
        <item name="bottomSheetDialogTheme">@style/Style.PocketChinese.Rounded.SheetDialog.2</item>

    </style>

    <style name="Theme.PocketChinese.Nav" parent="Theme.PocketChinese">
        <item name="colorOnPrimary">@color/black_light_plus</item>
        <item name="colorOnSecondary">@color/gray_light</item>
    </style>

    <style name="Theme.PocketChinese.AlertDialog.Night" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryVariant">@color/app_red_shaded</item>
        <item name="colorPrimaryDark">@color/app_red_shaded</item>
        <item name="android:colorBackground">@color/black_light_plus</item>
        <item name="colorOnBackground">@color/black_light_plus</item>
        <item name="colorSurface">@color/black_light_plus</item>
        <item name="colorOnSurface">@color/gray_light</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
    </style>

</resources>