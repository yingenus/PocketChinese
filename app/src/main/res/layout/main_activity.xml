<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center_vertical"
        app:cardBackgroundColor="?attr/colorOnSurface"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp">

        <com.yingenus.pocketchinese.view.bubblecust.BubbleTabBarCust
            android:id="@+id/main_bubble_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center"

            app:bubbletabcust_menuResource="@menu/bottom_navigation_menu"
            app:bubbletabcust_disabled_icon_color="?attr/colorPrimary"
            app:bubbletabcust_disabled_background_color="?attr/colorOnSurface"
            app:bubbletabcust_enabled_background_color="?attr/colorPrimary"
            app:bubbletabcust_icon_size="24dp"
            app:bubbletabcust_custom_font="@font/mulish_semibold"
            app:bubbletabcust_title_size="16dp"

            />

    </com.google.android.material.card.MaterialCardView>



</FrameLayout>