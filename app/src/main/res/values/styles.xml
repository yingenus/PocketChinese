<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.PocketChinese.Rounded.ExposedDropdownMenu.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.VeryLight</item>
    </style>
    <style name="Style.PocketChinese.Rounded.InputLayout.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.VeryLight</item>
    </style>

    <style name="Style.PocketChinese.Toolbar.WithCloseButton" parent="Widget.AppCompat.Toolbar">
        <item name="navigationContentDescription">Close</item>
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="Style.PocketChinese.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimaryVariant</item>
        <item name="indicatorSize">100dp</item>
        <item name="indicatorInset">5dp</item>
        <item name="trackThickness">10dp</item>
    </style>

    <style name="Style.PocketChinese.Rounded.ExposedDropdownMenu.WhiteBack" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded</item>
        <!-- <item name="boxBackgroundColor">@color/background_color</item> -->
    </style>
    <style name="Style.PocketChinese.Rounded.InputLayout.WhiteBack" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded</item>
        <!-- <item name="boxBackgroundColor">@color/background_color</item> -->
    </style>

    <style name="Style.PocketChinese.Rounded.InputLayout.WhiteBack.TextColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded</item>
        <item name="boxStrokeColor">@color/text_outlined_stoke_color</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
        <!-- <item name="boxBackgroundColor">@color/background_color</item> -->
    </style>

    <style name="Style.PocketChinese.Rounded.Light.InputLayout.WhiteBack" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.Light</item>
        <item name="boxStrokeColor">@color/filled_stroke_color_secondary</item>
        <!-- <item name="boxBackgroundColor">@color/background_color</item> -->
    </style>

    <style name="Style.PocketChinese.Rounded.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded</item>
    </style>

    <style name="Style.PocketChinese.Rounded.Button.Medium" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.Medium</item>
    </style>

    <style name="Style.PocketChinese.Rounded.Button.OutlinedButton.Gray" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded</item>
        <item name="strokeColor">?android:textColorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Style.PocketChinese.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Style.PocketChinese.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/Style.PocketChinese.Toolbar.Subtitle</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
    </style>

    <style name="Style.PocketChinese.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Style.PocketChinese.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="Style.PocketChinese.LinearProgressIndicator.OnPrimary" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.PocketChinese.Chip.Surface" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="backgroundColor">@color/chip_background</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">12dp</item>
        <item name ="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.Light</item>
    </style>

    <style name="Chip.Select" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIconVisible">true</item>
        <item name="checkedIconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/chip_text_on_primary</item>
        <item name="rippleColor">@color/button_ripple_on_primary</item>
        <item name="chipBackgroundColor">@color/chip_background_on_primary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_on_primary</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="Style.PocketChinese.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
    </style>

    <style name="Style.PocketChinese.Button.TextButton.Secondary" parent="Style.PocketChinese.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="Style.PocketChinese.Button.TextButton.Secondary.Small" parent="Style.PocketChinese.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="fontFamily">@font/mulish_light</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">4dp</item>
    </style>

    <style name="Style.PocketChinese.Button.TextButton.OnSurface" parent="Style.PocketChinese.Button.TextButton">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="iconTint">?android:textColorPrimary</item>
    </style>

    <style name="Style.PocketChinese.Rounded.SheetDialog.2" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.PocketChinese.AppModalStyle.2</item>
    </style>

    <style name="Style.PocketChinese.AppModalStyle.2" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.TopRounded</item>
        <item name="android:background">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>


    <style name="Style.PocketChinese.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Style.PocketChinese.BlockTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="tabIconTint">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">@color/color_on_surface_25</item>
    </style>
    <style name="Style.PocketChinese.MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Style.PocketChinese.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorSurface</item>
        <item name="backgroundSplit">?attr/colorPrimaryVariant</item>
        <item name="titleTextStyle">@style/Style.PocketChinese.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/Style.PocketChinese.ActionMode.Title</item>
    </style>
    <style name="Style.PocketChinese.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Style.PocketChinese.CheckBox.OnPrimary" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.PocketChinese.FloatingActionButton.Primary" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fab_bg_color_selector_primary</item>
        <!--<item name="backgroundTint">@color/fab_bg_color_selector_primary</item>-->
    </style>


    <style name="Style.PocketChinese.ButtonToggleGroup.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_stroke_on_primary</item>
        <item name="shapeAppearanceOverlay">@style/Style.PocketChinese.Rounded.Light</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/button_stroke_on_primary</item>
        <item name="backgroundTint">@color/button_background_on_primary</item>
        <item name="rippleColor">@color/button_ripple_on_primary</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Style.PocketChinese.ButtonToggleGroup.OutlinedButton.Primary" parent="Style.PocketChinese.ButtonToggleGroup.OutlinedButton">
        <item name="android:textColor">@color/button_stroke_surface</item>
        <item name="strokeColor">@color/button_stroke_surface</item>
        <item name="backgroundTint">@color/button_background_surface</item>
        <item name="rippleColor">@color/button_ripple_surface</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="Style.PocketChinese.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Style.PocketChinese.Rounded.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Style.PocketChinese.Rounded.Light" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Style.PocketChinese.Rounded.VeryLight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

</resources>