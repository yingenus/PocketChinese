<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketChinese" parent="Theme.PocketChinese.Default">

    </style>
    <style name="Theme.PocketChinese.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryVariant">@color/app_red_shaded</item>
        <item name="colorPrimaryDark">@color/app_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_red_shaded</item>
        <item name="colorSecondaryVariant">@color/app_red_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- <item name="android:homeAsUpIndicator">@color/backgroundColor</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>


        <item name="colorSurface">@color/gray_light</item>
        <item name="colorOnBackground">@color/gray_light_1</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:textColorPrimary">@color/green_dark</item>
        <item name="android:textColorSecondary">@color/gray</item>


        <item name="actionModeCloseDrawable">@drawable/ic_back</item>

        <item name="alertDialogTheme">@style/Theme.PocketChinese.AlertDialog</item>
        <item name="actionModeStyle">@style/Style.PocketChinese.ActionMode</item>
        <item name="bottomSheetDialogTheme">@style/Style.PocketChinese.Rounded.SheetDialog.2</item>

    </style>

    <style name="Theme.PocketChinese.Start" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_light</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/pink_light</item>
        <item name="postSplashScreenTheme">@style/Theme.PocketChinese</item>
    </style>

    <style name="Theme.PocketChinese.Start.NoActionBar" parent="Theme.PocketChinese.Start">
        <item name="postSplashScreenTheme">@style/Theme.PocketChinese.NoActionBar</item>
    </style>

    <style name="Theme.PocketChinese.PrimaryStatusBar" parent="Theme.PocketChinese">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.PocketChinese.Default.NoActionBar" parent="Theme.PocketChinese.Default">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PocketChinese.PrimaryStatusBar.NoActionBar" parent="Theme.PocketChinese.PrimaryStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PocketChinese.Default.NoActionBar.SurfaceStatusBar" parent="Theme.PocketChinese">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.PocketChinese.Default.NoActionBar.NoStatusBar" parent="Theme.PocketChinese">
        <item name="colorSecondary">@color/blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.PocketChinese.TrainingCard" parent="Theme.PocketChinese">
    </style>

    <style name="Theme.PocketChinese.Nav" parent="Theme.PocketChinese"/>

    <style name="Theme.PocketChinese.NoActionBar.NoStatusBar" parent="Theme.PocketChinese.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.PocketChinese.NoActionBar" parent="Theme.PocketChinese">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PocketChinese.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/pink_light</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
    </style>

</resources>